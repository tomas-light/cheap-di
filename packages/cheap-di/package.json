{
  "name": "cheap-di",
  "description": "TypeScript dependency injection like Autofac in .Net",
  "version": "4.0.1",
  "scripts": {
    "compile": "tsc --build tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
    "prepare-package-json": "ts-node scripts/prepare-package-json.ts",
    "build:clean": "rimraf -rf ./dist",
    "build": "npm-run-all build:clean compile prepare-package-json"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20",
    "jest": "^29.7.0",
    "npm-run-all": "^4",
    "rimraf": "^5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10",
    "typescript": "^5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomas-light/cheap-di.git"
  },
  "author": "TomasLight",
  "license": "MIT",
  "homepage": "https://github.com/tomas-light/cheap-di/tree/master/packages/cheap-di#readme",
  "keywords": [
    "dependency",
    "injection",
    "dependency injection",
    "cheap di"
  ],
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "build-instructions": {
    "name": "cheap-di",
    "files": [
      "cjs/**/*",
      "esm/**/*",
      "types/**/*",
      "package.json",
      "README.md",
      "LICENSE"
    ],
    "main": "./cjs/index.js",
    "module": "./esm/index.js",
    "types": "./types/index.d.ts"
  }
}
