{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "isolatedModules": true,
    "lib": [
      "es2022",
      "esnext.decorators",
      "esnext.disposable",
      "dom"
    ],
    "module": "ESNext",
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext"
  }
}
