{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2022", "esnext.decorators", "esnext.disposable", "dom"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "plugins": [{ "transform": "./src/dependenciesTransformer.ts", "type": "raw" }],
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "target": "ES2022"
  }
}
